        <style resid="statusViewSheet">
            <if id="atom(StatusText)">
                <element foreground="white" contentalign="wrapcenter" font="18;normal;shadow;Tahoma" shadowintensity="75" accessible="true" accrole="41"/>
            </if>
        </style>
    </stylesheets>
    
